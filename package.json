{
  "name": "bo-trading-api-calculator",
  "version": "1.0.0",
  "private": true,
  "description": "UNLICENSED",
  "repository": {
    "url": "https://github.com/smap-freelancer/bo_trading_api"
  },
  "scripts": {
    "apidoc": "apidoc -i src/ -o dist/wwwroot/apidoc/ && ncp ./style.css ./dist/wwwroot/apidoc/css/style.css",
    "build": "rimraf ./dist && tsc --build tsconfig.json && npm run apidoc",
    "build:prod": "rimraf ./dist && tsc --build tsconfig.json",
    "prestart": "npm run build",
    "start": "node ./dist/index.js",
    "lint": "tslint -c tslint.json 'src/**/*.ts' --fix --format verbose"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint -c tslint.json 'src/**/*.ts' --fix --format verbose",
      "prettier --write --config ./.prettierrc"
    ]
  },
  "dependencies": {
    "@types/ws": "^7.4.1",
    "apidoc": "^0.27.1",
    "axios": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "bo-trading-common": "^1.1.0",
    "body-parser": "^1.18.3",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "faker": "^5.5.3",
    "fs-extra": "^9.0.1",
    "module-alias": "^2.2.2",
    "moment": "^2.22.2",
    "mongoose": "^5.12.3",
    "ncp": "^2.0.0",
    "node-schedule": "^2.0.0",
    "oauth2orize": "^1.11.0",
    "passport": "^0.4.0",
    "passport-http": "^0.3.0",
    "passport-http-bearer": "^1.0.1",
    "passport-oauth2-client-password": "^0.1.2",
    "socket.io": "^4.0.1",
    "socket.io-client": "^4.0.1",
    "typescript": "^4.2.4",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/register": "^7.13.14",
    "@types/axios": "^0.14.0",
    "@types/body-parser": "^1.17.0",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^9.0.11",
    "@types/node": "^14.14.10",
    "@types/node-schedule": "^1.3.0",
    "@types/oauth2orize": "^1.8.3",
    "@types/passport": "^1.0.4",
    "@types/passport-http": "^0.3.6",
    "@types/passport-http-bearer": "^1.0.33",
    "@types/passport-oauth2-client-password": "^0.1.2",
    "@types/winston": "^2.3.9",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.0",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0"
  },
  "_moduleAliases": {
    "@src": "dist/"
  }
}
